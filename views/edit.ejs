<%- include("./partials/header") %>
<div class="ui main text container segment">
	<div class="ui huge header">Edit <%= data.title %></div>
	<form class="ui form" action="/blogs/<%= data._id %>?_method=PUT" method="POST">
		<div class="field">
			<label>Title</label>
			<input type="text" name="blog[title]" value="<%= data.title %>">
		</div>
		<div class="field">
			<label>Image</label>
			<input type="text" name="blog[image]" value="<%= data.image %>">
		</div>
		<div class="field">
			<label>Content</label>
			<textarea name="blog[body]" value="Content goes here"><%= data.body %></textarea>
		</div>
		<input class="ui violet basic button" type="submit">
	</form>
	
</div>